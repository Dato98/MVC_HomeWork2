@model MovieVM
@{
    ViewData["Title"] = "Search";
    Layout = "_Layout";
}

<div class="container mt-3">

    <div class="row row-cols-1 row-cols-md-3">

        @foreach (var item in Model.Movies)
        {
            <div class="col mb-4">
                <div class="card">
                    <img src="@item.Thumb" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>

                    </div>
                </div>
            </div>
        }

    </div>

</div>

