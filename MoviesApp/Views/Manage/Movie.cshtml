@model MovieVM
@{
    ViewData["Title"] = "Movie";
    Layout = "_ManageLayout";
}


<div class="container mt-4">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">სათაური</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Movies)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <th scope="row">@item.Title</th>
                    <th scope="row">
                        <a class="btn btn-outline-info editBtn" asp-action="EditMovie" asp-controller="Manage" asp-route-id="@item.Id">ჩასწორება</a>
                    </th>

                </tr>
            }

        </tbody>
    </table>

    <!--
        <div class="modal fade" id="EditMovieModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
            <partial name="~/Views/Manage/EditMovie.cshtml" model="Model.Movie"/>
        </div>
    -->

    <button type="button" class="btn btn-success" id="addBtn" data-toggle="modal" data-target="#exampleModalLong">
        დამატება
    </button>

    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <partial name="~/Views/Manage/CreateMovie.cshtml" model="Model.Movie" />
    </div>


</div>


@section Scripts{

    <script>




        $(".editBtn").on("click", function (e) {
            e.preventDefault();
            var url = $(this).attr("href");

            $.get(url, function (response) {
                $("#exampleModalLong").html(response);
            });
            $('#exampleModalLong').modal('show');
        });

    </script>
}